<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:id="@+id/detail_linear">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <Button
                    android:id="@+id/back_button_detail"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/ic_keyboard_return_black_24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/entity_name"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginStart="5dp"
                    android:text="实体"/>
            </LinearLayout>


            <Button
                android:id="@+id/detail_share_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_btn_blue_pressed"
                android:layout_marginStart="40dp"
                android:text="微博分享"
                android:textSize="16sp"
                style="?attr/materialButtonOutlinedStyle"/>

            <Button
                android:id="@+id/btn_quiz"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_btn_blue_pressed"
                android:text="关联试题"
                android:textSize="16sp"
                style="?attr/materialButtonOutlinedStyle"/>

            <Button
                android:id="@+id/btn_add_favourites"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_btn_blue_pressed"
                android:text="加入收藏"
                android:textSize="16sp"
                style="?attr/materialButtonOutlinedStyle"/>

        </LinearLayout>
    </HorizontalScrollView>
    <View
        android:layout_width="370dp"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/grey"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginStart="5dp"
        android:text="关系"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/detail_recycler1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <View
        android:layout_width="370dp"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/grey"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginStart="5dp"
        android:text="属性"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/detail_recycler2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

</LinearLayout>
