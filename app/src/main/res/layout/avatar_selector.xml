<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Button
        android:id="@+id/avatar_back_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_keyboard_return_black_24dp"/>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3">
        <RadioButton
            android:id="@+id/head1_radio"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="@drawable/head12"/>
        <RadioButton
            android:id="@+id/head2_radio"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="@drawable/head11"/>
        <RadioButton
            android:id="@+id/head3_radio"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="@drawable/head14"/>
        <RadioButton
            android:id="@+id/head4_radio"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="@drawable/head13"/>
        <RadioButton
            android:id="@+id/head5_radio"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="@drawable/head3"/>
        <RadioButton
            android:id="@+id/head6_radio"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="@drawable/head4"/>
        <RadioButton
            android:id="@+id/head7_radio"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="@drawable/head9"/>
        <RadioButton
            android:id="@+id/head8_radio"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="@drawable/head10"/>
        <RadioButton
            android:id="@+id/head9_radio"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="@drawable/head15"/>
    </GridLayout>



</LinearLayout>